@import url(http://fonts.googleapis.com/css?family=Roboto);

body {
    font-family: 'Roboto', sans-serif;
}

.container {
    max-width: 780px;
}

.navbar-brand {
    padding-right: 0;
}

.content {
    margin-top: 80px;
    margin-bottom: 80px;
}

.footer {
    border: 1px solid #e7e7e7;
    background-color: #f8f8f8;
    color: #777;
}

.footer p {
    float: right;
    padding-top: 15px;
    margin-right: 30px;
}

.badge {
    top: -1px;
    position: relative;
}

.action {
    text-decoration: underline;
}

.description {
    font-size: 16px;
    margin-bottom: 40px;
    color: #777;
}

@media (min-width: 767px) {
    .ios-cosmos {
        display: none !important;
    }
}
